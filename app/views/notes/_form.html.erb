<%= simple_form_for @note, :url=>notes_create_path,:html => { :class => 'form-horizontal' } do |f| %>
  <!--%= f.input :name %-->
  <%= f.input :text %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notes_create_path, :class => 'btn' %>
  </div>
<% end %>